#!/bin/bash

# Get the list of unique file extensions in the current directory
extensions=$(find . -maxdepth 1 -type f | sed 's/.*\.//' | sort -u)

# Create a directory for each file extension and move the corresponding files
for extension in $extensions
do
    # Create a directory for the extension if it doesn't exist
    if [ ! -d "$extension" ]
    then
        mkdir "$extension"
    fi
    
    # Move all files with the extension to the directory for that extension
    mv *.$extension "$extension" 2>/dev/null
done

echo "Directory organized successfully!"
